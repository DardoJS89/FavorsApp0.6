<div class="container-fluid">
  <div class="row" id="fulllogin">
    <div class="col-12 col-md-offset-3 col-md-6">

      <div class="mainlogin" style="width: 95vw; height: 100vh; background-color: teal;  background-size: cover; background-position: center center;">
      <div class="mainlogin" >

        <img src="https://i.imgur.com/EETal7I.png" />
        <h2>Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Email address' %>
          </div>
      
          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password'%>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field" id="remberme">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class='action'>
            <%= f.submit "Log in" %>
          </div>
        <% end %> 
          <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>

