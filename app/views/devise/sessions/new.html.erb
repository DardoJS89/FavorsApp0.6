
  <div class="col-md-2" style="width: 100vw; height: 100vh; background-color: teal;  background-size: cover; background-position: center center;">
    <img src="https://i.imgur.com/CmOlBg4.png" />
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Email address' %>
      </div>
  
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password'%>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class='action'>
        <%= f.submit "Log in" %>
      </div>
    <% end %>
      
        <%= render "devise/shared/links" %>
      
  </div>

