<div >

<h1 class= "pagemaintitle"> <%= @profiles.first_name %>'s Profile</h1>

   <div class="profileinfo">
    <div class="profileinfocontent"> 
   <ul class= "card">
      <li class="list-group-item"><p class="profiletext">Name:</p><%= @profiles.name %></li>
      <li class="list-group-item"><p class="profiletext">Age:</p><%= @profiles.age %></li>
      <li class="list-group-item"><p>Favors Given:</p><%= @profiles.favors_completed %></li>
      <li class="list-group-item"><p>Favors Received:</p><%= @profiles.favors_offered %></li>
  </ul>
       </div>
       </div>
    
    
  </div>
<div class="favorlist">
<h4 style=>Favors you're assisting with</h4>
<table class="table table-hover">
  <thead>
     <tr class="favorassist">
      <th scope="col" >Date</th>
      <th scope="col" class="favorassist">Category</th>
      <th scope="col" class="favorassist">Description</th>
      <th scope="col">   </th>
    </tr>
  </thead>
  <tbody>
  <%# Code that loops all each user's favors and populates each with the defined categories  %>
    <tr>  
        <% @performer_favors.each do |favor| %>
         <td><%= favor.created_at.to_date.strftime("%-m/%-d/%Y") %></td>
         <td><p class='<%=favor.category%>'></p> </td>
         <td> <%= favor.description%> </td>
         <td><%= link_to "Abandon", profile_path(:id => favor.id), method: :delete, data: { confirm: 'Are you sure' } , :class=> "btn btn-danger"%></td>
          </tr>
        <%end%>
  </tbody>
</table>
</div>
<div class="favorlist">
    <h4> Your Favors-List </h4>
  <table class="table table-hover">
     <thead>
     <tr class="favorassist">
        <th scope="col">Date</th>
        <th scope="col">Category</th>
        <th scope="col">Description</th>
        <th scope="col" id="locationtableyourfavs" > Location</th>
        <th scop="col"> Delete </th>
      </tr>
     </thead>
  <tbody>
  <%# Code that loops all each user's favors and populates each with the defined categories  %>
    <% @favors.each do |favor|%>
      <tr>
        <td scope="row"><%= favor.created_at.to_date.strftime("%-m/%-d/%Y") %></td>
        <td><p class='<%=favor.category%>'></p> </td>
        <td scope="row"><%= favor.description %></td>
        <td scope="row"><%= favor.street %></td>
        
        <td><%= link_to "Delete", profile_path(:id => favor.id), method: :delete, data: { confirm: 'Are you sure' } , :class=> "btn btn-danger"%></td> 
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>