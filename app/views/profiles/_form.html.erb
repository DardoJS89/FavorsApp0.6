<%= form_with(model: @profile, local: true) do |form| %>

    <div class="field">
        <%= form.label :first_name %>
        <%= form.text_field :first_name %>
    </div>
        <div class="field">
        <%= form.label :last_name %>
        <%= form.text_field :last_name %>
    </div>
        <div class="field">
        <%= form.label :age %>
        <%= form.text_field :age %>
    </div>
     <div>
        <%= form.hidden_field :favors_completed %>
    </div>
    <div>
        <%= form.hidden_field :favors_offered %>
    </div>

    <div class="action">
        <%= form.submit %>
    </div>
<% end %>